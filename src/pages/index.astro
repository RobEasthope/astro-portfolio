---
import Base from "@/layouts/Base.astro";
import { Box } from "@/components/ui/Box/Box";
import WorkSection from "@/components/content-sections/WorkSection/WorkSection.astro";
---

<Base title="Rob Easthope">
  <main class="grid gap-1">
    <Box id="landing" as="section" className="w-full px-1">
      <Box as="section" className="mx-auto max-w-prose">
        <h1>Landing</h1>
        <p>This is the landing section</p>
      </Box>
    </Box>
    <Box id="about" as="section" className="w-full px-1">
      <Box as="section" className="mx-auto max-w-prose">
        <h1>About</h1>
        <p>This is the about section</p>
      </Box>
    </Box>
    <WorkSection />
    <Box id="contact" as="section" className="w-full px-1">
      <Box as="section" className="mx-auto max-w-prose">
        <h1>Contact</h1>
        <p>This is the contact section</p>
      </Box>
    </Box>
  </main>
</Base>
