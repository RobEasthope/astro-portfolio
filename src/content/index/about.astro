---
import { Dot } from "@/components/decoration/Dot/Dot";
import { Box } from "@/components/ui/Box/Box";
import { EmailLink } from "@/components/ui/EmailLink/EmailLink";
import { ExternalLink } from "@/components/ui/ExternalLink/ExternalLink";
import { Prose } from "@/components/ui/Prose/Prose";
import { Type } from "@/components/ui/Type/Type";
import { StandardContentContainer } from "@/components/containers/StandardContentContainer/StandardContentContainer";
import { getCollection } from "astro:content";
import MarkdownRender from "@/components/MarkdownRender.astro";

const indexSections = await getCollection("index");

const aboutBlurb = indexSections.find(
  (section) => section.slug === "about-blurb",
);
---

<StandardContentContainer>
  <Box as="section" id="about" className="mx-auto max-w-prose">
    <Type as="h1" className="text-center text-2xl leading-tight">About</Type>

    <Dot className="my-1" />

    <Prose as="section" className="text-base">
      {aboutBlurb && <MarkdownRender markdown={aboutBlurb} />}
    </Prose>
  </Box>
</StandardContentContainer>
