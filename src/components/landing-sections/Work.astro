---
// eslint-disable-next-line import/no-unresolved
import { getCollection } from "astro:content";

import { Box } from "@/components/_base/Box/Box";
import { InternalLink } from "@/components/_base/InternalLink/InternalLink";
import { Type } from "@/components/_base/Type/Type";
import { TwoColContainer } from "@/components/containers/TwoColContainer/TwoColContainer";
import AstroImage from "@/components/_base/AstroImage/AstroImage.astro";
import thumbnail from "../../assets/ambr/ambr-thumbnail.png";

const listedProjects = await getCollection("work");
const listedProjectsByDate = listedProjects.sort((a, b) => {
  return (
    new Date(b.data.endDate).getTime() - new Date(a.data.endDate).getTime()
  );
});
---

<TwoColContainer heading="Work">
  <Box
    as="ul"
    className="grid grid-cols-1 gap-x-1 gap-y-1 xs:grid-cols-2 sm:grid-cols-3 md:grid-cols-1 md:gap-x-2 md:gap-y-1 lg:grid-cols-2"
  >
    {
      listedProjectsByDate?.map((project) => (
        <Type as="li">
          <InternalLink
            href={project.data.url}
            className="flex h-full flex-col"
          >
            <Box as="div" className="flex items-center gap-1">
              <AstroImage
                src={thumbnail}
                alt={project.data.title}
                className="w-2 h-2 rounded-full object-cover"
              />
              <Type as="div">{project.data.title}</Type>
            </Box>
            <Type as="div" className="text-sm italic ml-3">
              {project.data.description}
            </Type>
          </InternalLink>
        </Type>
      ))
    }
  </Box>
</TwoColContainer>
