---
import HeaderLogo from "@/components/navigation/Header/components/HeaderLogo/HeaderLogo.astro";
import { NavListing } from "@/components/navigation/Header/components/NavListing/NavListing";
import { Box } from "@/components/_base/Box/Box";
---

<Box as="header" className="bg-white px-2 py-1 md:py-1.25">
  <Box
    as="nav"
    className="mx-auto flex w-full flex-row flex-wrap items-center justify-between leading-4"
  >
    <NavListing
      links={[
        {
          title: "About",
          href: "/#about",
          type: "internal",
        },
        {
          title: "Work",
          href: "/#work",
          type: "internal",
        },
      ]}
    />
    <Box
      as="div"
      className="absolute left-1/2 flex -translate-x-1/2 justify-center"
    >
      <HeaderLogo />
    </Box>

    <NavListing
      links={[
        {
          title: "Github",
          href: "https://github.com/RobEasthope",
          type: "external",
        },
        {
          title: "Email",
          href: "hello@robeasthope.com",
          type: "email",
        },
      ]}
    />
  </Box>
</Box>
