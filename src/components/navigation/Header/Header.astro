---
import { Box } from "@/components/ui/Box/Box";
import HeaderLogo from "@/components/navigation/Header/components/HeaderLogo/HeaderLogo.astro";
import { NavListing } from "@/components/navigation/Header/components/NavListing/NavListing";
---

<Box as="header" className="bg-white px-1 py-0.5 md:px-2">
  <Box
    as="nav"
    className="mx-auto flex w-full max-w-prose flex-row-reverse flex-wrap items-center justify-between leading-4 sm:flex-row"
  >
    <NavListing
      links={[
        {
          title: "Work",
          href: "/#work",
          type: "internal",
        },
        {
          title: "About",
          href: "/#about",
          type: "internal",
        },
      ]}
    />

    <HeaderLogo />

    <NavListing
      links={[
        {
          title: "Github",
          href: "https://github.com/RobEasthope",
          type: "external",
        },
        {
          title: "Email",
          href: "hello@robeasthope.com",
          type: "email",
        },
      ]}
    />

    {
      /* <SmallNavigation
      logo={logo}
      primaryNavigation={primaryNavigation}
      secondaryNavigation={secondaryNavigation}
      appSettings={appSettings}
    /> */
    }
  </Box>
</Box>
