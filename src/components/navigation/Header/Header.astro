---
import HeaderLogo from "@/components/navigation/Header/components/HeaderLogo/HeaderLogo.astro";
import { NavListing } from "@/components/navigation/Header/components/NavListing/NavListing";
import { Box } from "@/components/_base/Box/Box";

type Props = {
  mode: "light" | "dark";
};

const { mode } = Astro.props;
---

<Box as="header" className="px-1 py-1 md:py-1.5">
  <Box
    as="nav"
    className="mx-auto flex w-full max-w-[calc(65ch+40ch+4rem)] flex-row flex-wrap items-center justify-between leading-4"
  >
    <NavListing
      links={[
        {
          title: "About",
          href: "/#about",
          type: "internal",
        },
        {
          title: "Work",
          href: "/#work",
          type: "internal",
        },
      ]}
      mode="dark"
    />
    <Box
      as="div"
      className="absolute left-1/2 flex w-full -translate-x-1/2 justify-center"
    >
      <HeaderLogo />
    </Box>

    <NavListing
      links={[
        {
          title: "Github",
          href: "https://github.com/RobEasthope",
          type: "external",
        },
        {
          title: "Email",
          href: "hello@robeasthope.com",
          type: "email",
        },
      ]}
      mode={mode}
    />
  </Box>
</Box>
