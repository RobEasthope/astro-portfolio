---
import { Box } from "@/components/ui/Box/Box";
import HeaderLogo from "@/components/navigation/Header/components/HeaderLogo/HeaderLogo.astro";
import { NavListing } from "@/components/navigation/Header/components/NavListing/NavListing";
---

<Box as="header" className="bg-white p-1 md:px-2">
  <Box
    as="nav"
    className="mx-auto flex w-full flex-row flex-wrap items-center justify-between leading-4"
  >
    <NavListing
      links={[
        {
          title: "About",
          href: "/",
          type: "internal",
        },
        {
          title: "Work",
          href: "/work",
          type: "internal",
        },
        {
          title: "CV",
          href: "/cv",
          type: "internal",
        },
      ]}
    />

    <HeaderLogo />

    <NavListing
      links={[
        {
          title: "Github",
          href: "https://github.com/RobEasthope",
          type: "external",
        },
        {
          title: "Email",
          href: "hello@robeasthope.com",
          type: "email",
        },
      ]}
    />
  </Box>
</Box>
