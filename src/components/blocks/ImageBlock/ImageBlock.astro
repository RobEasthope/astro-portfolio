---
import AstroImage from "@/components/ui/AstroImage/AstroImage.astro";
import { Box } from "@/components/ui/Box/Box";
import { Type } from "@/components/ui/Type/Type";
import type { ImageMetadata } from "astro";

interface Props {
  maxWidth: "small" | "text" | "medium" | "large" | "full";
  image: ImageMetadata;
  alt?: string;
  caption?: string;
}

const { image, caption, maxWidth = "medium" } = Astro.props;
---

<Box as="section" breakout blockSpacing>
  <Box as="figure" className="mx-auto" maxWidth={maxWidth}>
    <AstroImage src={image} alt={caption} className="mx-auto my-0" />
    <Box as="div" className="mx-auto sm:max-w-lg lg:max-w-5xl">
      <Type as="figcaption" className="text-sm italic text-gray-600 ">
        {caption}
      </Type>
    </Box>
  </Box>
</Box>
