---
import { Box } from "@/components/ui/Box/Box";
import { InternalLink } from "@/components/ui/InternalLink/InternalLink";
import { WorkSchemaProps } from "@/schemas/work.schema";
import type { z } from "astro:content";
import type { ImageMetadata } from "astro";
import AstroImage from "@/components/ui/AstroImage/AstroImage.astro";

type Props = Pick<z.infer<typeof WorkSchemaProps>, "title" | "url"> & {
  thumbnailImage: ImageMetadata;
};

const { title, url, thumbnailImage } = Astro.props;
---

<Box as="li">
  <InternalLink
    href={url}
    className="flex h-full flex-row items-center gap-0.5"
  >
    <AstroImage src={thumbnailImage} alt={title} className="h-2 w-2" />

    {title}
  </InternalLink>
</Box>
