---
import { Box } from "@/components/_base/Box/Box";
import { Type } from "@/components/_base/Type/Type";
import AstroImage from "@/components/_base/AstroImage/AstroImage.astro";
import type { GalleryImageProps } from "./GalleryImage";

type Props = GalleryImageProps & {
  key: string;
};

const { image, alt, caption } = Astro.props;
---

<Box as="figure" className="my-0 bg-white p-0.5 md:p-1">
  <Box as="div" className="mx-auto">
    <AstroImage src={image} alt={alt} className="mx-auto my-0" />
    {
      caption && (
        <Type
          as="figcaption"
          className="mx-auto max-w-prose text-center font-serif text-sm italic md:my-0.5"
        >
          {caption}
        </Type>
      )
    }
  </Box>
</Box>
