---
import type { ImageMetadata } from "astro";
import Image from "astro/components/Image.astro";

interface Props {
  src: ImageMetadata;
  width?: number;
  height?: number;
  className?: string;
  alt?: string;
}

const { src, width, height, className, alt = "" } = Astro.props;
---

{
  src && (
    <Image
      src={src}
      width={width}
      height={height}
      class={className}
      alt={alt}
    />
  )
}
